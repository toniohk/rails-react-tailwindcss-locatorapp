<div class="bg-blue-800 p-2 shadow text-xl text-white">
    <h3 class="font-bold pl-2">Edit User - <%= @user.email %></h3>
</div>
<div class="flex flex-wrap">
    <%= form_with model: @user, local: true, :class => 'w-full max-w-sm' do |f| %>
    <div class="">
        <% if @user.errors.any? %>
        <div id="error_explanation" style="color: red">
            <h2><% @count = @user.errors.count %>
                <%= pluralize(@count, "error") %>prohibited
                this user details from being updated:</h2>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
                <% end %>
            </ul>
        </div>
        <% end %>
    </div>
	<div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
            <%= f.label :email, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
            <br>
        </div>
        <div class="md:w-2/3">
            <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
    </div>
	<div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
            <%= f.label :full_name, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
            <br/>
        </div>
        <div class="md:w-2/3">
            <%= f.text_field :full_name, :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
    </div>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
            <%= f.label :role, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
            <br/>
        </div>
        <div class="md:w-2/3">
            <%= f.collection_select :role, User::ROLES, :to_s, :titleize, {prompt: "Select a role", selected: @user.role}, {class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"} %>
        </div>
    </div>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-2/3">
            <%= f.submit 'Save', :class => "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
    </div>
    <% end %>
</div>
