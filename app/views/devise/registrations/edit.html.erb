<div class="bg-blue-800 p-2 shadow text-xl text-white">
    <h3 class="font-bold pl-2">Edit <%= resource_name.to_s.humanize %></h3>
</div>
<div class="flex flex-wrap">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
            <%= f.label :email, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
            <br>
        </div>
        <div class="md:w-2/3">
            <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
    <% end %>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
            <%= f.label :password, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
            <i>(leave blank if you don't want to change it)</i>
            <br>
        </div>
        <div class="md:w-2/3">
            <%= f.password_field :password, autocomplete: "new-password", :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            <% if @minimum_password_length %>
            <br/>
            <em><%= @minimum_password_length %>characters minimum</em>
            <% end %>
        </div>
    </div>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
            <%= f.label :password_confirmation, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
            <br>
        </div>
        <div class="md:w-2/3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
    </div>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
            <%= f.label :current_password, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
            <i>(we need your current password to confirm your changes)</i>
            <br>
        </div>
        <div class="md:w-2/3">
            <%= f.password_field :current_password, required: true, autocomplete: "current-password", :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
    </div>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        </div>
        <div class="md:w-2/3">
            <%= f.submit 'Update', :class => "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
        </div>
    </div>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
            <%= link_to '<span class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded inline-flex items-center"><span class="fl">Back</span></span>'.html_safe, :back, class: "block py-1 md:py-3 pl-1 align-middle text-white no-underline hover:text-white" %>
        </div>
    </div>
    <% end %>
</div>
