<%= form_with model: @location, local: true, :class => 'w-full max-w-sm' do |f| %>
<% if flash[:notice] %>
<div class="notice">
    <%= flash[:notice] %>
</div>
<% end %>
<div class="">
    <% if @location.errors.any? %>
    <div id="error_explanation" style="color: red">
        <h2><% @count = @location.errors.count %>
            <%= pluralize(@count, "error") %>prohibited
            this location from being saved:</h2>
        <ul>
            <% @location.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
            <% end %>
        </ul>
    </div>
    <% end %>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
        <%= f.label :name, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        <br>
    </div>
    <div class="md:w-2/3">
        <%= f.text_field :name, autofocus: true, :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
        <%= f.label :website, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        <br>
    </div>
    <div class="md:w-2/3">
        <%= f.text_field :website, autofocus: true, :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
        <%= f.label :address_1,  :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        <br>
    </div>
    <div class="md:w-2/3">
        <%= f.text_field :address_1, required: true, :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
        <%= f.label :address_2, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        <br>
    </div>
    <div class="md:w-2/3">
        <%= f.text_field :address_2, :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
        <%= f.label :city, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        <br>
    </div>
    <div class="md:w-2/3">
        <%= f.text_field :city,  required: true, :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
        <%= f.label :state,  :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        <br>
    </div>
    <div class="md:w-2/3">
        <select id="location_state" name="location[state]" required="true" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500">
            <option value="">Select Your State</option>
            <% CS.states(:us).each do |key, value| %>
            <% if @location && @location.state.to_s == key.to_s %>
            <option selected value="<%= key %>"><%= value %></option>
            <% else %>
            <option value="<%= key %>"><%= value %></option>
            <% end %>
            <% end %>
        </select>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
        <%= f.label :zip, :class => "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        <br>
    </div>
    <div class="md:w-2/3">
        <%= f.text_field :zip, :class => "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
</div>
