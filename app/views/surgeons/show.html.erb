<div class="bg-blue-800 p-2 shadow text-xl text-white">
    <h3 class="font-bold pl-2">Surgeon Details:</h3>
</div>
<div style="margin:3em;">
<% @location = @surgeon.location %>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
    	Name: <%= @surgeon.full_name %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
    	Professional Suffix: <%= @surgeon.suffix %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
    	Email: <%= @surgeon.email %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
    	Procedure Types: <%= @surgeon.procedure_types_array %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
    	Website:  <%= @surgeon.url %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
    	Phone: <%= @surgeon.phone %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
    	Status: <%= @surgeon.status %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
	Address:  <%= "#{@location.address_1}, #{@location.address_2}, #{@location.city}, #{@location.state}, #{@location.zip}, #{@location.country}" %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
		Location Phone: <%= "#{@location.phone_number}" %>
    </div>
</div>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
		Location Fax: <%= "#{@location.fax_number}" %>
    </div>
</div>
<br/>
<div class="md:flex md:items-center mb-6">
    <div class="md:w-2/3">
		<%= link_to '<span class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded inline-flex items-center"><span class="fl">Edit</span></span>'.html_safe, edit_surgeon_path(@surgeon.id), class: "block py-1 md:py-3 pl-1 align-middle text-white no-underline hover:text-white"  %>
    </div>
</div>
</div>